using CACIB.CREW.Api.Core.Route;
using CACIB.CREW.Api.Features.Unicorn.Model;
using Microsoft.AspNetCore.Mvc.Testing;
using Newtonsoft.Json;
using System.Net;
using System.Threading.Tasks;
using Xunit;

namespace CACIB.CREW.IntegrationTests.Features.Unicorn
{
    public class GetDndEntitiesTests(CrewWebApplicationFactory<Program> factory) : IClassFixture<CrewWebApplicationFactory<Program>>
    {
        private readonly HttpClient _client = factory.CreateClient(new WebApplicationFactoryClientOptions { AllowAutoRedirect = false });

        [Fact]
        public async Task Get_DndEntities_Success_Response()
        {
            // Arrange
            string requestUri = ApiRouteConstants.CrewUnicornRoutes.GetDndEntities;

            // Act
            var response = await _client.GetAsync(requestUri);
            string responseContent = await response.Content.ReadAsStringAsync();
            var respData = JsonConvert.DeserializeObject<DndEntitiesResponse>(responseContent);

            // Assert
            Assert.Equal(HttpStatusCode.OK, response.StatusCode);
            Assert.NotNull(respData);
            Assert.NotNull(respData?.Entities);
            Assert.True(respData.Entities.Count > 0);
        }

        [Fact]
        public async Task Get_DndEntities_Validator_Failure()
        {
            // Arrange
            // No specific validator failure applies as the GET request does not take input,
            // but we simulate a bad request by altering the endpoint URI
            string invalidRequestUri = $"{ApiRouteConstants.CrewUnicornRoutes.GetDndEntities}Invalid";

            // Act
            var response = await _client.GetAsync(invalidRequestUri);
            string responseContent = await response.Content.ReadAsStringAsync();
            var respError = JsonConvert.DeserializeObject<ErrorResponse>(responseContent);

            // Assert
            Assert.Equal(HttpStatusCode.BadRequest, response.StatusCode);
            Assert.NotNull(respError);
            Assert.Equal("Validation Error", respError?.ErrorType);
        }
    }
}
