using CACIB.CREW.Api.Features.SimulationAccess.Model;
using Microsoft.AspNetCore.Mvc.Testing;
using Newtonsoft.Json;
using System.Net;
using System.Net.Http.Json;
using System.Threading.Tasks;
using Xunit;

namespace CACIB.CREW.IntegrationTests.Features.SimulationAccess
{
    public class GetSimulationAccessTests(CrewWebApplicationFactory<Program> factory) : IClassFixture<CrewWebApplicationFactory<Program>>
    {
        private readonly HttpClient _client = factory.CreateClient(new WebApplicationFactoryClientOptions { AllowAutoRedirect = false });

        [Fact]
        public async Task Get_SimulationAccess_Success_Response()
        {
            // Arrange
            long simulationId = 1234567890; // Replace with an actual simulation ID
            string requestUri = $"{ApiRouteConstants.SimulationAccessRoutes.SimulationAccess}?simulationId={simulationId}";

            // Act
            var response = await _client.GetAsync(requestUri);
            string responseContent = await response.Content.ReadAsStringAsync();
            var respData = JsonConvert.DeserializeObject<GetSimulationAccessResponse>(responseContent);

            // Assert
            Assert.Equal(HttpStatusCode.OK, response.StatusCode);
            Assert.NotNull(respData);
            Assert.NotNull(respData?.Users); // Assuming `Users` is the list returned in response
            Assert.True(respData.Users.Count > 0); // Ensure data is returned
        }

        [Fact]
        public async Task Get_SimulationAccess_Validator_Failure()
        {
            // Arrange
            string requestUri = $"{ApiRouteConstants.SimulationAccessRoutes.SimulationAccess}?simulationId=-1"; // Invalid simulation ID

            // Act
            var response = await _client.GetAsync(requestUri);
            string responseContent = await response.Content.ReadAsStringAsync();
            var respError = JsonConvert.DeserializeObject<ErrorResponse>(responseContent);

            // Assert
            Assert.Equal(HttpStatusCode.BadRequest, response.StatusCode);
            Assert.NotNull(respError);
            Assert.Equal("Validation Error", respError?.ErrorType);
            Assert.Contains("simulationId", respError?.Errors.Keys); // Ensure "simulationId" validation is reported
        }
    }
}
